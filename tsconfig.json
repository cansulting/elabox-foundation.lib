{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "paths": {
      "*": [
        "node_modules/",
      ]
    }
  },
  "include": [
      "./**/*"
  ],
  "exclude": [
      "dist",
      "**/*.spec.ts"
  ]
}